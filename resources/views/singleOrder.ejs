<section class="singleOrder">
    <div class="orderContainer">
        <div class="flex">
            <h3 class="font-bold">Track delivery status</h3>
            <span class="orderId">
                <%= order._id %>
            </span>
            <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
        </div>
        <ul>
            <li class="white-line status-line pb-16" data-status="order_placed"><span>Order Placed</span></li>
            <li class="white-line status-line pb-16" data-status="confirmed"><span>Order confirmation</span></li>
            <li class="white-line status-line pb-16" data-status="prepared"><span>Preparation</span></li>
            <li class="white-line status-line pb-16" data-status="delivered"><span>Out for delivery</span></li>
            <li class="white-line" data-status="completed"><span>Complete</span></li>
        </ul>
        <a href="/customer/orders"><button class="btn back">back</button></a>
    </div>
</section>